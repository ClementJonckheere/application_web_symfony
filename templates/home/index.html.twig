{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}

    <main class="main-home">
        <section>
            <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                </ol>
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img class="d-block w-100" src="{{ asset('./images/Hogwarts-overlay.jpg')}}" alt="First slide">
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" src="{{ asset('./images/Hogwarts-overlay.jpg')}}" alt="Second slide">
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" src="{{ asset('./images/Hogwarts-overlay.jpg')}}" alt="Third slide">
    </div>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

        {{form_start(form)}}
        <div class="mb-3 row-form-addrecettes">
            <div class="label-form">
                {{ form_label(form.name, null, {
                    'label': 'Nom',
                    'label_attr': {'class': 'form-label'}
                }) }}
            </div>
            <div class="input-form">
                {{ form_widget(form.name, {'attr': {'class': 'form-input-name'}}) }}
            </div>
            <div class="label-form">
                {{ form_label(form.categories, null, {
                    'label': 'Categorie',
                    'label_attr': {'class': 'form-label'}
                }) }}
            </div>
            <div class="input-form">
                {{ form_widget(form.categories, {'attr': {'class': 'form-input-category'}}) }}
            </div>
        </div>
        <div class="mb-3">
            <div class="label-form">
                {{ form_label(form.description, null, {
                    'label': 'Description',
                    'label_attr': {'class': 'form-label'}
                }) }}
            </div>
            <div class="input-form">
                {{ form_widget(form.description, {'attr': {'class': 'form-input-textarea'}}) }}
            </div>
                        <div class="label-form">
                {{ form_label(form.imageFile, null, {
                    'label': 'Image',
                    'label_attr': {'class': 'form-label'}
                }) }}
            </div>
            <div class="input-form">
                {{ form_widget(form.imageFile) }}
            </div>
            <div class="label-form">
                {{ form_label(form.cooking_time, null, {
                    'label': 'Temps de cuisson',
                    'label_attr': {'class': 'form-label'}
                }) }}
            </div>
            <div class="input-form">
                {{ form_widget(form.cooking_time) }}
            </div>

            <div class="label-form">
                {{ form_label(form.ingredient, null, {
                    'label': 'Ingredients',
                    'label_attr': {'class': 'form-label'}
                }) }}
            </div>
            <div class="input-form">
                {{ form_widget(form.ingredient) }}
            </div>

        </div>
        <button class="input-send">Envoyer</button>
        {{form_end(form)}}
        </section>
    </main>
{% endblock %}
